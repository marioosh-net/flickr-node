<!DOCTYPE html>
<html>
    <head>
        <title><%= photoset.title %> - Slideshow</title>
        <link rel="stylesheet" media="screen" href="/stylesheets/superslides.css">
        <style>
          .slides-container .container {
            font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
            font-weight: bold;
            position: absolute;
            bottom: 20px;
            left: 20px;
            text-shadow: 0 1px 1px #000;
            font-size: 15px;
            color: #eee;
          }
          .slides-container .container a {
            text-decoration: none;
            color: #eee;
          }
          .slides-container .container a:hover {
            text-decoration: underline;
          }
          .preserve {
            margin: auto;
            display: block;
          }
          .slides-container li {
            background-color: #000;
          }
        </style>
    </head>
<body>
  <div id="slides">
    <ul class="slides-container">
    <% for(var i=0; i<thumbs.length; i++) {%>
        <li>
        <img src="<%= thumbs[i].url_l %>" class="<% if(parseInt(thumbs[i].height_l) > parseInt(thumbs[i].width_l)){%>preserve<%}%>"/>
        <div class="container"><a href="<%= thumbs[i].url_o %>" target="_blank"><%= thumbs[i].title %></a></div>
        </li>
    <% } %>
    </ul>
  </div>
    <script src="/javascripts/jquery-1.7.1.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="/javascripts/jquery.easing.1.3.js"></script>
    <script type="text/javascript" src="/javascripts/jquery.animate-enhanced.min.js"></script>
    <script type="text/javascript" src="/javascripts/jquery.superslides.min.js" type="text/javascript" charset="utf-8"></script>        

  <script>
    $(function() {
      $('#slides').superslides({
        hashchange: true,
        play: 4000,
        pagination: false
      });
    });
  </script>
</body>
</html>
